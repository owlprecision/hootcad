{
  "name": "hootcad",
  "displayName": "HootCAD",
  "description": "VS Code extension to view JSCAD files",
  "version": "0.0.1",
  "publisher": "hootcad",
  "repository": {
    "type": "git",
    "url": "https://github.com/joelmartinez/hootcad"
  },
  "engines": {
    "vscode": "^1.107.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onLanguage:jscad",
    "onCommand:hootcad.openPreview"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "hootcad.openPreview",
        "title": "HootCAD: Open Preview"
      }
    ],
    "languages": [
      {
        "id": "jscad",
        "extensions": [
          ".jscad"
        ],
        "aliases": [
          "JSCAD"
        ],
        "configuration": "./language-configuration.json"
      }
    ],
    "grammars": [
      {
        "language": "jscad",
        "scopeName": "source.js",
        "path": "./syntaxes/jscad.tmLanguage.json"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "webpack",
    "watch": "webpack --watch",
    "package": "webpack --mode production --devtool hidden-source-map",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "npm run compile-tests && npm run compile && npm run lint",
    "lint": "eslint src",
    "test": "vscode-test",
    "package:vsix": "vsce package --skip-license"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.10",
    "@types/node": "22.x",
    "@types/vscode": "^1.107.0",
    "@vscode/test-cli": "^0.0.12",
    "@vscode/test-electron": "^2.5.2",
    "@vscode/vsce": "^3.7.1",
    "eslint": "^9.39.1",
    "ts-loader": "^9.5.4",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.48.1",
    "webpack": "^5.103.0",
    "webpack-cli": "^6.0.1"
  },
  "dependencies": {
    "@jscad/modeling": "^2.12.6",
    "@jscad/regl-renderer": "^2.6.13"
  }
}
